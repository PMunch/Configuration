#	tray_output eDP1

	bindsym button4 nop
	bindsym button5 nop
	#font xft:Noto Sans,Icons 10.5
	font pango:M+ 2p, Regular 12
	strip_workspace_numbers yes
        colors {
		background #2d303b
		statusline #DDDDDD
		separator #2D303B
		binding_mode #2F343A #E74C3C #FFFFFF
		focused_workspace #6E91FF #6E91FF #2D303B
		#focused_workspace #FFFFFF #FFFFFF #2D303B
		urgent_workspace #6E91FF #E74C3C #FFFFFF
		active_workspace #6E91FF #2D303B #6E91FF
		inactive_workspace #2D303B #2D303B #6E91FF
	}
}

