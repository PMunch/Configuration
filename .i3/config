  #font pango:Inconsolata 9
  font pango:M+ 2p, Icons 10
  colors {
    background #28282800
    statusline #DDDDDD
    separator #2d303b
    active_workspace #6d91ff #2d303b00 #6d91ff
    binding_mode #2F343A #e74c3c #FFFFFF
    focused_workspace #6d91ff #6d91ff #2d303b
    urgent_workspace #6d91ff #e74c3c #FFFFFF
    inactive_workspace #2d303b00 #2d303b00 #6d91ff
  }
}
